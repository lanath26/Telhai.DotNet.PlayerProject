<Window x:Class="Telhai.DotNet.PlayerProject.Views.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="420" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#222" Foreground="White">

	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Song name:" FontWeight="Bold"/>
		<TextBox Grid.Row="1"
                 Text="{Binding SongName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,6,0,12"
                 Background="#333" Foreground="White"/>

		<GroupBox Grid.Row="2" Header="Custom images" Margin="0,0,0,12">
			<Grid Margin="10">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<ListBox ItemsSource="{Binding CustomImages}"
                         SelectedItem="{Binding SelectedImage}"
                         Background="#333" Foreground="White"
                         Height="200"/>

				<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
					<Button Content="Add" Command="{Binding AddImageCommand}" Margin="5" Padding="12,6"/>
					<Button Content="Remove selected" Command="{Binding RemoveImageCommand}" Margin="5" Padding="12,6"/>
				</StackPanel>
			</Grid>
		</GroupBox>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Margin="5" Padding="18,8"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"/>
			<Button Content="Close" Margin="5" Padding="18,8" IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>
